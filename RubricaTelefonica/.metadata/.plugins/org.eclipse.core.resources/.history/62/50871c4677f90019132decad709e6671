package com.practice.rubrica.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.practice.rubrica.entities.Contatti;
import com.practice.rubrica.repository.ContattiRepository;

@RestController
@RequestMapping("/api")
public class ContattiController {

	@Autowired
	private ContattiRepository contattiRepository;
	
	@PostMapping("/contatti")
	Contatti nuovoContatto(@RequestBody Contatti nuovoContatto) {
		return contattiRepository.save(nuovoContatto);
	}
	
	
}
